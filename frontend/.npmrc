# Security settings
registry=https://registry.npmjs.org/

# Minimum release age: only install packages that are at least 7 days old
# This helps mitigate supply chain attacks by avoiding newly published malicious packages
# 10080 minutes = 7 days
minimum-release-age=10080

# Exclude packages from minimum release age check for security updates
# react-router-dom: CVE-2026-21884, CVE-2026-22029, CVE-2026-22030 fixed in 7.12.0
minimum-release-age-exclude[]=react-router-dom
minimum-release-age-exclude[]=react-router

# Prefer offline mode when possible to use cached packages
prefer-offline=true

# Strict SSL
strict-ssl=true

# Auto-install peers
auto-install-peers=true
